# Require TTY
Defaults	requiretty

# Archive sudo's i/o
Defaults	log_input
Defaults	log_output
Defaults	iolog_dir=/var/log/sudo/
Defaults	logfile=/var/log/sudo/sudo-log
#Secure path
Defaults	secure_path="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/snap/bin"


